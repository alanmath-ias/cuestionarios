{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "../dist/server",
      "rootDir": "../",  // Incluye todo el proyecto pero puede causar side effects
      "module": "ESNext",
      "target": "ES2021",
      "esModuleInterop": true,
      "moduleResolution": "node",
  
      // ðŸ‘‡ Esto anula los tipos heredados (como vite/client)
      "types": ["node"]
    },
    "include": ["./**/*.ts", "../shared/**/*.ts"],
    "exclude": ["../client", "../dist", "node_modules"]
  }
  
  