{
  "include": ["shared/**/*", "server/"],
  "exclude": ["client/src/**/*", "node_modules", "dist", "**/*.test.ts","shared/schema.bak.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "NodeNext", // Cambiado de ESNext a NodeNext
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],// Alias para el cliente
      "@shared/*": ["./shared/*"]// Alias para archivos compartidos
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true
  }
}
